<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.egoveris</groupId>
    <artifactId>edt</artifactId>
    <version>2.0.3-SNAPSHOT</version>
  </parent>
  <artifactId>edt-webapp</artifactId>
  <packaging>war</packaging>
  <name>edt web application (WAR) aggregator project</name>
  <dependencies>
    <dependency>
      <groupId>org.terasoluna.plus.framework</groupId>
      <artifactId>terasoluna-plus-webapp-conf</artifactId>
    </dependency>
    <dependency>
      <groupId>org.terasoluna.plus.security</groupId>
      <artifactId>terasoluna-plus-app-security-conf</artifactId>
    </dependency>
    <dependency>
      <groupId>com.egoveris</groupId>
      <artifactId>edt-env</artifactId>
    </dependency>
    <dependency>
      <groupId>javax</groupId>
      <artifactId>javaee-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.egoveris</groupId>
      <artifactId>edt-base-common</artifactId>
    </dependency>
    <dependency>
      <groupId>com.egoveris</groupId>
      <artifactId>edt-base-core</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>com.egoveris</groupId>
      <artifactId>edt-base-web</artifactId>
      <exclusions>
        <exclusion>
          <artifactId>google-collections</artifactId>
          <groupId>com.google.collections</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.egoveris</groupId>
      <artifactId>edt-scheduler-core</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>com.egoveris</groupId>
      <artifactId>edt-ws-common</artifactId>
    </dependency>
    <dependency>
      <groupId>com.egoveris</groupId>
      <artifactId>edt-ws-web</artifactId>
    </dependency>
    <dependency>
      <groupId>com.egoveris</groupId>
      <artifactId>edt-model-common</artifactId>
    </dependency>
  </dependencies>
  <build>
    <finalName>edt-web</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>tomcat</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <dependencies>
        <dependency>
          <groupId>javax.servlet</groupId>
          <artifactId>jstl</artifactId>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>
