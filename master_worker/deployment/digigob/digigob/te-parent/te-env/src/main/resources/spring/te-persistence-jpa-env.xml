<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd">

	<!-- Provides the required "jpaDataSource" bean -->
	<alias name="dataSourceEDT" alias="dataSourceUsuarios" />
	<alias name="dataSourceEDT" alias="dataSourceReparticion" />
	<alias name="dataSource" alias="jpaDataSource" />
	<alias name="dataSourceEDT" alias="dataSourceOrg" />

	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:comp/env/jdbc/eeDS" />
		<property name="resourceRef" value="true" />
		<property name="cache" value="true" />
		<property name="proxyInterface" value="javax.sql.DataSource" />
	</bean>
	
	<bean id="dataSourceEDT" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:comp/env/jdbc/edtDS" />
		<property name="resourceRef" value="true" />
		<property name="cache" value="true" />
		<property name="proxyInterface" value="javax.sql.DataSource" />
	</bean>

	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean" depends-on="liquibase">
		<property name="dataSource" ref="jpaDataSource" />
		<property name="jpaVendorAdapter" ref="jpaVendorAdapter" />
		<!-- Set JPA properties -->
		<property name="jpaProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</prop>
				<prop key="javax.persistence.schema-generation.database.action">none</prop>
			</props>
		</property>
		<!-- Set base package of your entities -->
		<property name="packagesToScan" value="${persistence.packagesToScanEU}" />
		<!-- Set share cache mode -->
		<property name="sharedCacheMode" value="ENABLE_SELECTIVE" />
		<!-- Set validation mode -->
		<property name="validationMode" value="NONE" />
	</bean>



</beans>